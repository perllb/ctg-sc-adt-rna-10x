// Configuration file for sc-rna-10x pipeline 

params {

       /* 
       	  =====================
          SET THE FOLLOWING 2 (OR 3) VARIABLES MANUALLY 
          =====================
       */

       	// Project ID (2021_XXX) or Run ID (date: e.g. YYMMDD-sc-rna-10x) 
	metaid = "210524-sc-adt-rna-10x"
	// Sample Sheet (Must be in the specified runfolder!)
	ssheet = "samplesheet.example.csv"
	// Folder of experiment raw data
	runfolder = "210524_A00681_0374_AH27CYDRXY"

	// demux - set to 'n' if fastq already generated (they should then be in FQDIR)
	demux = 'y'
	// bcl2fastq arguments - e.g. "--minimum-trimmed-read-length 20 --mask-short-adapter-reads 20" 
	bcl2fastqarg_rna = "" 
	bcl2fastqarg_adt = "--use-bases-mask=Y28n*,I6n*,N10,Y90n*" 
	// Index type ('dual' or 'single')
	index_rna = "dual"
	index_adt = "single"	// Custom Genome - if not Human/Mouse standard ref
	// if using other genome reference than hg38 or mm10
	custom_genome = "/projects/fs1/medpvb/proj/cite-seq/flygare/custom_genome/hg38_genome_coRPS19"

	// Feature reference file with antibody declaration
	features = "/projects/fs1/shared/ctg-pipelines/ctg-sc-adt-rna-10x/metadata/feature.ref.csv" 

	/*
	   =================
	   AUTOMATIC PARAMS 
	   =================
	*/

	// Base ctg-outdir: 
 	outdir = "/projects/fs1/nas-sync/ctg-delivery/sc-adt-rna-10x/${metaid}/"

	experiment = "/projects/fs1/nas-sync/upload/${runfolder}"
//	basedir = "/projects/fs1/shared/ctg-projects/ctg-sc-adt-rna-10x/${metaid}/"
	basedir = "/projects/fs1/shared/ctg-pipelines/ctg-sc-adt-rna-10x/"
	sheet = "${basedir}/${ssheet}"
	fqdir = "${outdir}fastq/"
	qcdir = "${outdir}qc/"
	countdir = "${outdir}count/"
	aggdir = "${outdir}aggregate/"
	ctgqc = "/projects/fs1/shared/ctg-qc/sc-adt-rna-10x/${metaid}"
	metadir = "${basedir}/metadata"
}

// Define SLURM specs
process {
	executor='slurm'
	container = '/projects/fs1/shared/ctg-containers/sc-rna-10x/sc-rna-10x.v6/sc-rna-10x.v6.sif'
	time='5h'
	cpus='8'

	withName:mkfastq_rna {
		time='24h'
		cpus='16'
		memory='110 GB'
	}
	withName:mkfastq_adt {
		time='24h'
		cpus='16'
		memory='110 GB'
	}
	withName:count {
		time='2d'
		cpus='20'
		memory='120 GB'
	}
	withName:aggregate {
		time='2d'
		cpus='16'
		memory='120 GB'	
	}
	withName:fastqc {
		time='4h'
		cpus='16'
		memory='120GB'
	}
	withName:md5sum {
		time='5h'
		cpus='1'
		memory='120GB'
	}
}


singularity {
	    enabled = true
	    runOptions = '--bind /projects/fs1/'
}
